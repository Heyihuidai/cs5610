doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title ? title + ' - Task Manager' : 'Task Manager'
    //- Bootstrap CSS
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css", rel="stylesheet")
    //- Custom styles
    style.
      body {
        padding-top: 2rem;
        padding-bottom: 2rem;
      }
      .navbar {
        margin-bottom: 2rem;
      }
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
      .container
        a.navbar-brand(href="/") Task Manager
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav
            li.nav-item
              a.nav-link(href="/tasks") All Tasks
            li.nav-item
              a.nav-link(href="/tasks/newtask") Add Task
    
    .container.mt-5.pt-3
      block content
    
    footer.footer.mt-5.py-3.bg-light
      .container.text-center
        span.text-muted CS 5610 - Task Manager Application
    
    //- Bootstrap JS
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js")